<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- cache-path: armazena arquivos em uma pasta temporaria do APP onde o S.O pode limpar quando houver necessidade de espaço -->
    <cache-path
        name="cache_images"
        path="." />

    <!-- files-path: armazena arquivos para serem persistidos, mesmo após limpeza de cache -->
    <files-path
        name="file_image"
        path="images/" />
</paths>